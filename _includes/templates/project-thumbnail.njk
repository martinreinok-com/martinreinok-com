<div class="gallery">
  <a href="{{ project.link }}" class="gallery-item">
    <img src="{{ project.thumbnail }}" alt="{{ project.alt }}" class="gallery-image">
    <div class="description">
      <h3 class="heading">{{ project.name }}</h3>
      <p>{{ project.description }}</p>
      <p class="date" >{{ project.date }}</p>
    </div>
  </a>
</div>